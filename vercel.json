{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "python_backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/python_backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "outputDirectory": "client/dist",
  "buildCommand": "cd client && npm install && npm run build",
  "devCommand": "cd client && npm run dev",
  "installCommand": "cd client && npm install && cd ../python_backend && pip install -r requirements.txt",
  "functions": {
    "python_backend/main.py": {
      "runtime": "python3.9"
    }
  },
  "env": {
    "PYTHONPATH": "python_backend"
  }
}